<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  autoReload="true" internalLogLevel="Trace"
	  internalLogFile="E:\Niraj\Pogramming\IssueTraackerApp\IssueTrackerBackend\internallog.txt">
	<targets>
		<target name="logfile" xsi:type="File"
				fileName="E:\Niraj\Pogramming\IssueTraackerApp\IssueTrackerBackend\${shortdate}_logfile.txt"
				layout="${longdate} ${level:uppercase=true} ${message}" />
	</targets>
	<rules>
		<logger name="*" minlevel="Debug" writeTo="logfile" />
	</rules>
</nlog>